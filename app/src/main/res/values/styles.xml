<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- region Home Fragment-->
    <style name="HomeRecyclerStyle">
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:paddingTop">@dimen/dimen_4</item>
    </style>

    <style name="homeHeroContainerStyle">
        <item name="android:layout_margin">@dimen/dimen_8</item>
    </style>

    <style name="homeHeroThumbnailStyle">
        <item name="android:maxWidth">@dimen/max_size_thumbnail</item>
        <item name="android:maxHeight">@dimen/max_size_thumbnail</item>
        <item name="android:minWidth">@dimen/min_size_thumbnail</item>
        <item name="android:minHeight">@dimen/min_size_thumbnail</item>
    </style>

    <style name="homeHeroNameStyle">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="homeHeroDescriptionStyle">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_marginTop">@dimen/dimen_4</item>
    </style>
    <!--endregion -->

    <!--   region Hero Fragment-->
    <style name="heroImageStyle">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="heroNameStyle">
        <item name="android:textSize">@dimen/hero_name_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
    </style>

    <style name="heroDescriptionStyle">
        <item name="android:textSize">@dimen/hero_description_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">10</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
    </style>
    <!--endregion-->

    <!--    region Villain Problem -->
    <style name="villainImageStyle">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="fabTryButtonStyle">
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:src">@android:drawable/ic_search_category_default</item>
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="hintLookForHeroesStyle">
        <item name="android:textSize">@dimen/hero_look_hint_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
    </style>
    <!--    endregion-->
</resources>
